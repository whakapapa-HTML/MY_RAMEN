<div class="container">
  <h2 class="m-5">会員詳細</h2>
  <div class="row">
    <div class="col-10 m-auto m-4">
      <table class="table small table-hover">
        <thead>
          <tr>
            <th scope="col">会員名</th>
            <th scope="col">イントロダクション</th>
            <th scope="col">投稿したレシピ</th>
            <th scope="col">退会ステータス</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <th><%= @user.name %></th>
            <td><%= @user.introduction %></td>
            <td>
              <% @user.recipes.each do |recipe| %>
                <div class="flex-column">
                  <%= link_to admin_recipe_path(recipe.id) do %>
                    <%= recipe.name %>
                  <% end %>
                </div>
              <% end %>
            </td>
              <% if @user.is_deleted %>
              <td class="text-secondary">退会済み</td>
            <% else %>
               <td class="text-success">有効</td>
            <% end %>
            <td><%= link_to "編集", edit_admin_user_path(@user) %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
