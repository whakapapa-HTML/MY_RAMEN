<div class="container">
  <h2 class="m-5">会員一覧</h2>
  <div class="row">
    <div class="col-10 m-auto m-4">
      <table class="table small table-hover m-4">
        <thead>
            <tr>
              <th>会員名</th>
              <th>イントロダクション</th>
              <th>ステータス</th>
              <th></th>
            </tr>
        </thead>
        <tbody id="post">
        <% @users.each do |user| %>
          <tr>
            <td><%= user.name %></td>
            <td><%= user.introduction %></td>
            <% if user.is_deleted %>
              <td class="text-secondary">退会済み</td>
            <% else %>
               <td class="text-success">有効</td>
            <% end %>
            <td><%= link_to "詳細", admin_user_path(user) %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
