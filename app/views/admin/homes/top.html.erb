<div class="container">
  <h2 class="m-5">レシピ一覧</h2>
  <div class="row">
    <div class="col-10 m-auto m-4">
      <table class="table small table-hover m-4">
        <thead>
            <tr>
              <th>レシピ名</th>
              <th>レシピ概要</th>
              <th></th>
            </tr>
        </thead>
        <tbody id="post">
        <% @recipes.each do |recipe| %>
          <tr>
            <td><%= recipe.name %></td>
            <td><%= recipe.introduction %></td>
            <td><%= link_to "レシピ詳細", admin_recipe_path(recipe) %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>