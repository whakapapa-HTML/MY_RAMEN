<div class="container">
  <h3 class="m-5">会員ステータスの変更</h3>
    <div class="row">
      <div class="col-10 m-auto">
      <%= form_with model: @user, url: admin_user_path(@user.id), method: :patch, local:true do |f| %>
      <table class="table small">
        <tr>
          <td>ユーザー名</td>
          <td><%= f.text_field  %></td>
        </tr>
        <tr>
          <td>自己紹介</td>
          <td><%= @user.introduction %></td>
        </tr>
        <tr>
          <td>メールアドレス</td>
          <td><%= @user.email %></td>
        </tr>
        <tr>
          <td>会員ステータス</td>
          <td>
            <%= f.radio_button :is_deleted, :false %>
            <%= f.label :is_deleted, "有効" %><br />
            <%= f.radio_button :is_deleted, :true %>
            <%= f.label :is_deleted, "退会" %>
          </td>
        </tr>
      </table>

      <div class="d-flex mt-4 ml-2">
        <%= f.submit:'会員ステータスを変更', class:'btn btn-sm btn-primary py-0', data:
        { confirm: "ステータスを変更しますか？",
            cancel: 'キャンセル',
            commit: '変更'}, title: '変更の確認' %>
        <%= link_to "戻る", admin_user_path(@user.id), class: 'btn btn-sm btn-secondary ml-4' %>
      </div>
      <% end %>
    </div>
  </div>
</div>