
<div class="container-fluid">
  <div class="row">
    <%= render 'layouts/sidebar', genres: @genres %>
    <div class="col">
      <div class="row">
        <% @genres.each do |genre| %>
        <div class="col-5 d-flex flex-column mt-5 mb-5">
          <%= link_to image_tag(genre.genre_image.url, class: "d-block mx-auto", :size => '320x220'), recipe_genres_recipe_path(genre.id) %>
          <strong class="text-center"><%= genre.name %></strong>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>