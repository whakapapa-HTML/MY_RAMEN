<% if recipe.bookmarked_by?(current_user) %>
  <%= link_to recipe_bookmark_path(recipe, recipe.bookmarks), method: :delete, remote: true do %>
    <i class="fas fa-bookmark fa-lg fab-color"></i>
  <% end %>
<% else %>
  <%= link_to recipe_bookmarks_path(recipe, recipe.bookmarks), method: :post, remote: true do %>
    <i class="far fa-bookmark fa-lg fab-color"></i>
  <% end %>
<% end %>