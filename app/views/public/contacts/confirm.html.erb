<div class="container">
  <h2 class="contact-title p-5">お問い合わせ内容確認</h2>
  <div class="row">
    <div class="col-10 m-auto">
      <table class="table small col-10 m-auto">
        <tr>
          <td>タイトル:</td>
          <td><%= @contact.title %></td>
        </tr>
        <tr>
          <td class="mt-3">お問い合わせ内容:</td>
          <td><%= @contact.body %></td>
        </tr>
      </table>
      <div class="d-flex justify-content-center">
        <%= form_with model: @contact, url: contacts_path, method: :post,  local:true do |f| %>
          <%= f.hidden_field :title, class:"form-control" %>
          <%= f.hidden_field :body, class:"form-control" %>
          <%= f.submit "送信", class: "btn btn-success mt-3 ml-3" %>
        <% end %>
        <%= link_to "戻る", new_contact_path, class: "btn btn-danger mt-3 ml-3" %>
      </div>
    </div>
  </div>
</div>